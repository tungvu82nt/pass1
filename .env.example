# Memory Safe Guard - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Vite Environment
VITE_APP_NAME="Memory Safe Guard"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Ứng dụng quản lý mật khẩu hiện đại và an toàn"

# Application Configuration
VITE_APP_DOMAIN=harmonious-pothos-5f3f98.netlify.app
VITE_APP_URL=https://harmonious-pothos-5f3f98.netlify.app

# API Configuration - Backend server
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000
VITE_ENABLE_API_SYNC=true

# Neon Database Configuration - Production Ready
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/memorysafeguard?sslmode=require
VITE_USE_NEONDB=true

# Security Configuration
VITE_ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-for-authentication

# Legacy Database Configuration (IndexedDB fallback)
VITE_DB_NAME=memorySafeGuardDB
VITE_DB_VERSION=1

# Development Configuration
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=false
VITE_ENABLE_SAMPLE_DATA=true
VITE_SAMPLE_PASSWORDS='[{"service":"Gmail","username":"user@gmail.com","password":"sample_password_123"},{"service":"Facebook","username":"user@facebook.com","password":"fb_password_456"},{"service":"GitHub","username":"developer","password":"github_token_789"}]'

# Logging Configuration
VITE_LOG_LEVEL=debug

# Build Configuration
VITE_BUILD_MODE=production
NODE_ENV=development

# Server Configuration
PORT=3001

# Note: Never commit .env.local to version control
# Add .env.local to your .gitignore file