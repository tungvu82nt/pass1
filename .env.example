# Memory Safe Guard - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Application Configuration
VITE_APP_DOMAIN=yapee.online
VITE_APP_URL=https://yapee.online

# API Configuration
VITE_API_BASE_URL=https://yapee.online/api/passwords
VITE_API_TIMEOUT=5000
VITE_ENABLE_API_SYNC=true

# Database Configuration (NeonDB)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Supabase Configuration (Optional - for future integration)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Development Configuration
VITE_ENABLE_SAMPLE_DATA=true
VITE_SAMPLE_PASSWORDS='[{"service":"Gmail","username":"user@gmail.com","password":"sample_password_123"},{"service":"Facebook","username":"user@facebook.com","password":"fb_password_456"},{"service":"GitHub","username":"developer","password":"github_token_789"}]'

# Logging Configuration
VITE_LOG_LEVEL=debug

# Note: Never commit .env.local to version control
# Add .env.local to your .gitignore file